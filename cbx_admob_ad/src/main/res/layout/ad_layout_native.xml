<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">
    <!--NATIVE SHIMMER SMALL 1-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sflShimmerSmall1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:visibility="visible">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ad_shimmer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ad_shimmer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/ad_shimmer" />

                        <View
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/ad_shimmer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/ad_shimmer" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/ad_shimmer" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/adAttribute"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="#FF9800"
                android:gravity="center"
                android:text="AD"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </FrameLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <!--NATIVE SHIMMER SMALL 2-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sflShimmerSmall2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_67sdp"
                        android:layout_height="@dimen/_67sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ad_shimmer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/ad_shimmer" />

                        <View
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/ad_shimmer" />

                        <View
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/ad_shimmer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@drawable/ad_shimmer" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="#FF9800"
                android:gravity="center"
                android:text="AD"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </FrameLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <!--NATIVE SHIMMER LARGE-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sflShimmerLarge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ad_shimmer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ad_shimmer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/ad_shimmer" />

                        <View
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/ad_shimmer" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/ad_shimmer" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="#FF9800"
                android:gravity="center"
                android:text="AD"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />
        </FrameLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <!--AD SPACE PLACE HOLDER LARGE-->
    <TextView
        android:id="@+id/tvAdSpaceLarge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Ad Space"
        android:textColor="#73818C9F"
        android:textSize="@dimen/_15ssp"
        android:visibility="gone" />
    <!--AD SPACE PLACE HOLDER SMALL-->
    <TextView
        android:id="@+id/tvAdSpaceSmall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Ad Space"
        android:textColor="#73818C9F"
        android:textSize="@dimen/_15ssp"
        android:visibility="gone" />
    <!--NATIVE AD ROOT VIEW-->
    <FrameLayout
        android:id="@+id/flAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.cardview.widget.CardView>
